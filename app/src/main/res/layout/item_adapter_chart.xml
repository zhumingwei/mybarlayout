<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chartlayout_height"
    >


    <TextView
        android:id="@+id/chart_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:lines="1"
        android:singleLine="true"
        android:text="05/27"/>

    <View
        android:id="@+id/chart_divider"
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:layout_above="@+id/chart_time"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        ></View>

    <RelativeLayout
        android:id="@+id/chart_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/chart_divider"
        android:gravity="center_horizontal"
        >

        <View
            android:id="@+id/chart_point"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#5588ec"
            android:translationY="-90dp"
            ></View>

        <View
            android:id="@+id/chart_bar"
            android:layout_width="50dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="#02ffec"
            android:translationY="140dp"
            ></View>
    </RelativeLayout>

</RelativeLayout>